<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="20dp"
    tools:context=".ui.fragments.RegisterFragment">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etEmail"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/etUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etUsername"
        app:layout_constraintTop_toBottomOf="@id/etUsername" />

    <EditText
        android:id="@+id/etPassword"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="@+id/etCpassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etCpassword"
        app:layout_constraintTop_toBottomOf="@+id/etCpassword" />

    <EditText
        android:id="@+id/etCpassword"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_lock"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etEmail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etName"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_profile"
        android:hint="@string/user_first_name"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextView" />

    <EditText
        android:id="@+id/etLastName"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_profile"
        android:hint="@string/user_last_name"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="@+id/etName"
        app:layout_constraintStart_toStartOf="@+id/etName"
        app:layout_constraintTop_toBottomOf="@id/etName" />

    <EditText
        android:id="@+id/etUsername"
        style="@style/Widget.LibraLink.EditText"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_at"
        android:hint="@string/hint_username"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="@+id/etLastName"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/etLastName"
        app:layout_constraintTop_toBottomOf="@id/etLastName" />

    <Button
        android:id="@+id/buttonSend"
        style="@style/Widget.LibraLink.Buttons"
        android:layout_width="250dp"
        android:layout_height="@dimen/edit_profile_data_input_height"
        android:layout_marginTop="25dp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>